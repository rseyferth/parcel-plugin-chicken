				this.route('/klant/enquete/:surveyResponseId', 'Client.SurveyResponse@show').as('client.survey-response.show');


				/////////////////////////
				// Admin SURVEY routes //
				///////////////////////// 

				this.group({ moduleMinimumLevel: 10 }, function() {

					this.route('/medewerker/enquetes', 'Employee.Survey@index').as('employee.survey.index').nest(function() {

						this.route('/:surveyKey', 'Employee.Survey@show').as('employee.survey.show');

					});

