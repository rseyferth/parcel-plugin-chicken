				///////////////////////////
				// Candidate JOBS routes //
				///////////////////////////

				this.route('/kandidaat/vind-tijdelijk-werk/:jobId', 'Candidate.Job@show').as('candidate.job.show').constrain('jobId', /^\d+$/);
				this.route('/kandidaat/vind-tijdelijk-werk/:filter', 'Candidate.Job@index').as('candidate.job.index');
				
