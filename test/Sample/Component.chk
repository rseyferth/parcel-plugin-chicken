			//                                                                                                                                      

			
			//////////////////
			// Admin routes //
			//////////////////
			
			this.group({ moduleKey: 'jobs', moduleMinimumLevel: 10 }, function() {
			
				this.route('/medewerker/rooster', 'Employee.JobTimeslot@index').as('employee.job-timeslot.index').acceptQuery();

			});

			
			///////////////////
			// Client routes // 
			///////////////////

			this.group({ moduleKey: 'jobs', moduleMinimumLevel: 8 }, function() {
				
				this.route('/klant/rooster', 'Client.JobTimeslot@index').as('client.job-timeslot.index').acceptQuery();

			});



			// ████████╗ █████╗ ███████╗██╗  ██╗███████╗
			// ╚══██╔══╝██╔══██╗██╔════╝██║ ██╔╝██╔════╝
			//    ██║   ███████║███████╗█████╔╝ ███████╗
			//    ██║   ██╔══██║╚════██║██╔═██╗ ╚════██║
			//    ██║   ██║  ██║███████║██║  ██╗███████║
			//    ╚═╝   ╚═╝  ╚═╝╚══════╝╚═╝  ╚═╝╚══════╝
			//                                          

			this.group({ moduleKey: 'tasks' }, function() {

				this.route('/planning', 'Employee.Planning@index').as('employee.planning.index').acceptQuery().nest(function() {
					
					this.route('/:task', 'Employee.Planning@show').as('employee.planning.show');

