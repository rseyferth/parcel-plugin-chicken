	if (Chicken.environment === 'beta') {

		this.route('', 'App@layout').nest({ viewContainer: 'page' }, function() {

			this.route('/', 'Public@betaHome').as('public.home');

			this.route('/contact', 'App@betaContact').as('public.contact');
			this.route('/privacybeleid', 'Public@privacy').as('public.privacy');
			this.route('/cookie-instellingen', 'Public@cookies').as('public.cookies');
			

		});

	} else {

		this.route('', 'Public@layout').nest({ viewContainer: 'page' }, function() {
			
			this.route('/', 'Public@home').as('public.home');
			
			this.route('/ik-zoek-werk', 'Public@findJobs').as('public.find-jobs').nest(function() {

				this.route('/waarnemend-huisarts', 'Public@findJobsAs').as('public.find-jobs.waarnemer');
