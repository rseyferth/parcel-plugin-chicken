				this.route('/kandidaat/vind-een-vaste-baan/:filter', 'Candidate.PermanentJob@index').as('candidate.permanent-job.index');
				
					
			});
			
			
			// ██████╗ ██████╗  ██████╗ ███████╗██╗██╗     ███████╗███████╗
			// ██╔══██╗██╔══██╗██╔═══██╗██╔════╝██║██║     ██╔════╝██╔════╝
			// ██████╔╝██████╔╝██║   ██║█████╗  ██║██║     █████╗  ███████╗
			// ██╔═══╝ ██╔══██╗██║   ██║██╔══╝  ██║██║     ██╔══╝  ╚════██║
			// ██║     ██║  ██║╚██████╔╝██║     ██║███████╗███████╗███████║
			// ╚═╝     ╚═╝  ╚═╝ ╚═════╝ ╚═╝     ╚═╝╚══════╝╚══════╝╚══════╝
			//                                                             
			this.group({ moduleKey: 'profiles' }, function() {

				//////////////////////////
				// Admin PROFILE routes //
				//////////////////////////

				this.route('/medewerker/profielen', 'Employee.Profile@index').as('employee.profile.index').nest(function() {

					this.route('/kandidaten', 'Employee.Profile@candidateIndex').as('employee.profile.candidate');
					this.route('/opdrachtgevers', 'Employee.Profile@clientIndex').as('employee.profile.client');
					this.route('/medewerkers', 'Employee.Profile@employeeIndex').as('employee.profile.employee');
					this.route('/overig', 'Employee.Profile@otherIndex').as('employee.profile.other');
					this.route('/incompleet', 'Employee.Profile@incompleteIndex').as('employee.profile.incomplete');

					this.route('/:profileId', 'Employee.Profile@show').as('employee.profile.show');

					this.route('/:profileId/uren', 'Employee.ProfileDeclaration@index').as('employee.profile.declaration.index');

					editProfileRoutes(this, '/:profileId/wijzigen', 'employee.profile.edit');

				});


			});


			// ██████╗  ██████╗  ██████╗ ██╗  ██╗██╗███╗   ██╗ ██████╗     ████████╗██╗███╗   ███╗███████╗███████╗██╗      ██████╗ ████████╗███████╗
			// ██╔══██╗██╔═══██╗██╔═══██╗██║ ██╔╝██║████╗  ██║██╔════╝     ╚══██╔══╝██║████╗ ████║██╔════╝██╔════╝██║     ██╔═══██╗╚══██╔══╝██╔════╝
			// ██████╔╝██║   ██║██║   ██║█████╔╝ ██║██╔██╗ ██║██║  ███╗       ██║   ██║██╔████╔██║█████╗  ███████╗██║     ██║   ██║   ██║   ███████╗
			// ██╔══██╗██║   ██║██║   ██║██╔═██╗ ██║██║╚██╗██║██║   ██║       ██║   ██║██║╚██╔╝██║██╔══╝  ╚════██║██║     ██║   ██║   ██║   ╚════██║
			// ██████╔╝╚██████╔╝╚██████╔╝██║  ██╗██║██║ ╚████║╚██████╔╝       ██║   ██║██║ ╚═╝ ██║███████╗███████║███████╗╚██████╔╝   ██║   ███████║
