<div class="ui blue inverted segment">
    
    <div class="ui inverted form">

        <div class="fields">

            <div class="five wide field">

                <i class="hospital icon"></i>

                <hh-checkbox value={{useCompany}}>{{l "company"}}</hh-checkbox>
                {{#if useCompany}}
                    <ui-dropdown value={{company}} 
                        source="/companies?search={query}&page[size]=8" 
                        value-attribute="id" text-attribute="name" name-attribute="name" class="search selection fluid" 
                        use-model-as-value=true>
                        <i class="dropdown icon"></i>
                        <div class="default text"></div>
                        <div class="menu">
                        </div>
                    </ui-dropdown>
                {{/if}}

            </div>

            <div class="three wide field">

                <i class="suitcase icon"></i>

                <hh-checkbox value={{useJobId}}>{{l "job-id"}}</hh-checkbox>
                {{#if useJobId}}
                    <input type="number" step="1" key="job-id" value={{jobId}} />
                {{/if}}

            </div>

            <div class="four wide field">

                 <i class="add to calendar icon"></i>

                <hh-checkbox value={{useFromDate}}>{{l "from-date"}}</hh-checkbox>
                {{#if useFromDate}}
                    <ui-calendar ui-start-mode="month" ui-type="date" value={{fromDate}} />
                {{/if}}

            </div>
            <div class="four wide field">

                <i class="delete to calendar icon"></i>

                <hh-checkbox value={{useUntilDate}}>{{l "until-date"}}</hh-checkbox>
                {{#if useUntilDate}}
                    <ui-calendar ui-start-mode="month" ui-type="date" value={{untilDate}} />
                {{/if}}

            </div>

        </div>

    </div>

</div>
